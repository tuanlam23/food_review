<link rel="stylesheet" href="/css/abc/main.css">
<link rel="stylesheet" href="/css/abc/util.css">
<div class="limiter">
  <div class="container-login100" style="background-image: url('/images/slider.jpg');">
    <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'login100-form validate-form flex-sb flex-w'}) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <span class="login100-form-title p-b-53">
						Đăng ký
					</span>
          <%= render "devise/shared/error_messages", resource: resource %>
          <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn-face m-b-20">
            <i class="fa fa-facebook-official"></i>
            Đăng nhập bằng Facebook
          </a>
          <div class="p-t-31 p-b-9">
						<span class="txt1">
							Họ tên
						</span>
          </div>

          <div class="wrap-input100 validate-input" data-validate = "Nhập họ tên">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'input100' %>
            <!--<input class="input100" type="text" name="username" >-->
            <span class="focus-input100"></span>
          </div>
          <div class="p-t-31 p-b-9">
						<span class="txt1">
							Email
						</span>
          </div>

          <div class="wrap-input100 validate-input" data-validate = "Email is required">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input100' %>
            <!--<input class="input100" type="text" name="username" >-->
            <span class="focus-input100"></span>
          </div>

          <div class="p-t-31 p-b-9">
						<span class="txt1">
							Mật khẩu
						</span>
          </div>

          <div class="wrap-input100 validate-input" data-validate = "Password is required">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'input100' %>
            <!--<input class="input100" type="text" name="username" >-->
            <span class="focus-input100"></span>
          </div>

          <div class="p-t-31 p-b-9">
						<span class="txt1">
							Xác nhận mật khẩu
						</span>
          </div>

          <div class="wrap-input100 validate-input" data-validate = "Password confirm is required">
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: 'input100' %>
            <!--<input class="input100" type="text" name="username" >-->
            <span class="focus-input100"></span>
          </div>


          <div class="container-login100-form-btn m-t-17">
            <%= f.submit "Đăng ký", class: 'login100-form-btn' %>
          </div>

          <div class="w-full text-center p-t-55">

            <a href="<%= new_session_path(resource_name) %>" class="txt2 bo1">
              Đăng nhập
            </a>
          </div>

          <!--</form>-->
      <% end %>
    </div>
  </div>
</div>
<script src="/js/abc/main.js"></script>


<script>
    $(window).scroll(function() {
        // 100 = The point you would like to fade the nav in.

        if ($(window).scrollTop() > 100) {

            $('.fixed').addClass('is-sticky');

        } else {

            $('.fixed').removeClass('is-sticky');

        };
    });
</script>

